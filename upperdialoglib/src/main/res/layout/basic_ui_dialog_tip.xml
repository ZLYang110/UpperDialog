<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_big"
    android:paddingTop="@dimen/margin_def"
    android:background="@drawable/bg_solid_round_color_surface_radius_def"
    android:orientation="vertical">

    <TextView
        android:id="@+id/basic_ui_tv_dialog_tip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/text_surface"
        android:textSize="@dimen/text_title"
        tools:text="提示" />

    <TextView
        android:id="@+id/basic_ui_tv_dialog_tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_middle"
        android:paddingTop="@dimen/margin_def"
        android:paddingRight="@dimen/margin_middle"
        android:paddingBottom="@dimen/margin_middle"
        android:textColor="@color/text_surface"
        android:textSize="@dimen/text_content"
        tools:text="提示信息提示信息提示信息提示信息提示信息提示信息提示信息提示信息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/basic_ui_tv_dialog_tip_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/basic_ui_dialog_btn_no"
            android:textColor="@color/text_third"
            android:textSize="@dimen/text_content" />

        <View
            android:id="@+id/basic_ui_v_dialog_tip_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <TextView
            android:id="@+id/basic_ui_tv_dialog_tip_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="@string/basic_ui_dialog_btn_yes"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_content" />

    </LinearLayout>

</LinearLayout>